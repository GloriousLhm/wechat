@import "../../common/css/list.wxss";
/* 750rpx = 一个屏幕的宽度 */
/* 1rpx = 页面宽度/750  px */
/* 设计稿 1080px = 1080/750 = 1.44px */
/* div的宽 204px = 204/1.44 =141.6 rpx */

page {
    height: 100%;
}

.pressBtn {
    padding-top: 20px;
    background-color: pink;
    width: 740rpx;
}

.header {
    height: 92rpx;
    background-color: #181818;
}

.city {
    width: 142rpx;
    text-align: center;
    line-height: 92rpx;
    color: #d3b9a0;
    font-size: 29rpx;
    float: left;
}

/* 向下三角形 */
.city::after {
    content: "";
    display: inline-block;
    border-width: 10rpx 10rpx 0;
    border-style: solid;
    border-color: #d3b9a0 transparent transparent;
    margin-left: 5rpx;
    vertical-align: middle;
    height: 0;
    position: relative;
    top: -2rpx;
}

/* 本地图片无法通过wxss获取们可以使用网络图片或者base64 或者使用image标签 */
.userinfo {
    float: right;
    width: 48rpx;
    height: 48rpx;
    margin: 25rpx 33rpx 0 0;
}

.userinfo image {
    width: 100%;
    height: 100%;
}

.nav-list {
    display: flex;
    height: 200rpx;
    background-color: #fff;
}

.nav-list navigator {
    margin: auto;
    flex: 1;
    text-align: center;
}

.nav-list image {
    width: 87.5rpx;
    height: 87.5rpx;
}

.nav-list text {
    display: block;
    line-height: 52rpx;
    font-size: 26rpx;
}

.hot {
    margin-top: 20rpx;
    background-color: #fff;
}

.hot-title {
    font: 30rpx/80rpx "宋体";
    padding-left: 20px;
    color: #181818;
}